{
  "name": "education-planners",
  "version": "2.5.0",
  "description": "Website for Education Planners.",
  "main": "index.js",
  "scripts": {
    "start": "yarn run dev",
    "predev": "yarn run clean",
    "dev": "NODE_ENV=development npm-run-all --parallel build:assets build:11ty --sequential serve watch",
    "prebuild": "yarn run clean",
    "build": "NODE_ENV=production run-s build:assets build:11ty",
    "clean": "rm -rf _site && mkdir _site",
    "prebuild:assets": "mkdir _site/assets",
    "build:assets": "run-p build:assets:*",
    "build:assets:css": "postcss src/_assets/css/index.css -o _site/css/styles.css",
    "build:assets:js": "webpack src/_assets/javascript/index.js -o _site/javascript/main.js",
    "build:assets:images": "cp -r src/_assets/images _site/assets/images",
    "build:assets:svg": "svg-sprite --svg-xmldecl=false --svg-doctype=false --symbol --symbol-inline=true --symbol-dest=src/_includes src/_assets/svg/*.svg",
    "build:assets:pdf": "mkdir -p _site/assets/pdf && cp -R src/_assets/pdf/* _site/assets/pdf",
    "build:assets:favicons": "cp src/_assets/favicons/* _site",
    "build:11ty": "eleventy",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "chokidar 'src/_assets/css/**/*' 'tailwind.config.js' --command 'run-s build:assets:css browsersync:reload'",
    "watch:js": "chokidar 'src/_assets/javascript/**/*' --command 'run-s build:assets:js browsersync:reload'",
    "watch:images": "chokidar 'src/_assets/images/**/*' --command 'run-s build:assets:images browsersync:reload'",
    "watch:svg": "chokidar 'src/_assets/svg/**/*.svg' --command 'run-s build:svg build:11ty browsersync:reload'",
    "watch:11ty": "chokidar 'src/*.html' 'src/*.njk' 'src/*.md' 'src/_includes/*' 'src/_layouts/*' 'src/_data/*.+(yml|yaml|csv|json)' 'src/_team/*' --command 'run-s build:11ty:dev browsersync:reload'",
    "serve": "browser-sync '_site' --port 4000 --no-notify",
    "browsersync:reload": "browser-sync reload --port 4000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://babycourageous@github.com/babycourageous/education-planners.git"
  },
  "author": "Rene Dellefont",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/babycourageous/education-planners/issues"
  },
  "homepage": "https://github.com/babycourageous/education-planners#readme",
  "dependencies": {
    "a11y-dialog-component": "^5.2.3",
    "flickity": "^2.2.1",
    "gumshoejs": "github:cferdinandi/gumshoe",
    "smooth-scroll": "^15.0.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.8.3",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.2",
    "browser-sync": "^2.26.7",
    "chokidar": "^3.0.2",
    "chokidar-cli": "^1.2.2",
    "cssnano": "^4.1.10",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.0",
    "marked": "^0.7.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "precss": "^4.0.0",
    "prettier": "^1.18.2",
    "svg-sprite": "^1.5.0",
    "tailwindcss": "^1.0.5",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.6"
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "maintained node versions",
    "not dead"
  ]
}
