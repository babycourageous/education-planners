<header role="banner" class="fixed top-0 z-10 w-full h-auto lg:h-60px bg-white shadow-lg" data-gumshoe-header>
  <div class="container flex justify-between items-center flex-col lg:flex-row">
    <a href="/" class="inline-block h-60px py-0 px-3 leading-60">
      <img width="250px" class="inline-block align-middle" src="/assets/images/logo.png" alt="Logo Image">
    </a>

    <nav role="navigation" class="relative flex flex-col md:flex-row items-center md:justify-between bg-white">
      <ul id="js-navigation-menu" class="flex items-center border-b-1 border-gray-dark text-center" data-gumshoe>
        {% for navitem in site.nav %}
          <li>
            {% if base %}
              <a class="block p-2 font-bold text-grey-darker hover:text-blue-darker uppercase text-xs md:text-base" href="/{{ navitem.href }}" class="navigation__link">{{ navitem.name }}</a>
            {% else %}
              <a class="block p-2 font-bold text-grey-darker hover:text-blue-darker uppercase text-xs md:text-base" href="/{{ navitem.href }}" class="navigation__link">{{ navitem.name }}</a>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</header>